# ─── Evolution API Environment Variables ─────────────────────────────────────
# Copy to .env and fill in values:
# cp .env.example .env
# ─────────────────────────────────────────────────────────────────────────────

# 64-char hex key — generate with: openssl rand -hex 32
EVOLUTION_API_KEY=

# Public URL for Evolution API (used for QR code callbacks)
EVOLUTION_SERVER_URL=https://evo.saubh.tech

# CORS origin
CORS_ORIGIN=https://saubh.tech

# Log level: ERROR, WARN, INFO, DEBUG
LOG_LEVEL=WARN

# Redis password (must match saubh-redis container)
# Leave empty if Redis has no password
REDIS_PASSWORD=
